<%- include("header")%>
    <div class="container-fluid mt-4">
        <div class="d-flex justify-content-center align-items-center ">
            <div class="form-control w-50 p-4">
                <form action="/viewdetail/edit" method="post">
                    <div class="d-flex justify-content-lg-start pb-3">
                        <p class="lead fw-normal mb-0 me-3">Edit passward details </p>

                    </div>
                    <div class="container-fluid m-2">
                        <label class="form-label" for="Domain">Domain </label>
                        <select name="Domain" class="form-select form-select-sm" aria-label=".form-select-sm example">

                            <option value="<%= item.Domain%>" selected>
                                <%= item.Domain %>
                            </option>


                        </select>
                    </div>
                    <div class="container-fluid m-2">
                        <input type="text" id="id" name="id" value="<%= item._id%>" hidden />

                        <label class="form-label" for="username">Username </label>
                        <input type="text" id="Name" name="username" class="form-control" value="<%= item.Username%>" />

                        <label class="form-label" for="Password">Password </label>
                        <input type="password" id="passward" name="passward" class="form-control"
                            value="<%= item.Password%>" />
                    </div>
                    <div class="container-fluid m-2 d-flex justify-content-between">
                        <button class="btn btn-outline-primary" type="submit">submit</button>
                        <button class="btn btn-outline-primary" type="reset">reset</button>
                    </div>
            </div>
        </div>
    </div>

    </form>
    </div>
    <%- include("footer")%>
        </body>



        </html>